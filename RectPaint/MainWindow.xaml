<Window x:Class="RectPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RectPaint"
        mc:Ignorable="d"
        Title="Rectangle Painter" d:DataContext="{d:DesignInstance}"
        Height="1080" Width="1920">
        
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <!-- Menu -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" Command="{Binding OpenCommand}"/>
                <MenuItem Header="Save" Command="{Binding SaveCommand}"/>
                <MenuItem Header="Save As" Command="{Binding SaveAsCommand}"/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo" Command="{Binding UndoCommand}"/>
                <MenuItem Header="Redo" Command="{Binding RedoCommand}"/>
                <MenuItem Header="Delete" Command="{Binding DeleteCommand}"/>
                <MenuItem Header="Delete All" Command="{Binding DeleteAllCommand}"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar-->
        <ToolBar Grid.Row="1">
            <Button Background="Transparent" Command="{Binding DrawRectangleCommand}">
                <StackPanel Orientation="Vertical">
                    <Rectangle Width="50" Height="50" Stroke="Black" Fill="Beige"/>
                    <TextBlock Text="Rectangle"/>
                </StackPanel>
            </Button>
            <Separator></Separator>
            <StackPanel Orientation="Vertical">
                <Button Background="Transparent" Margin="1" Command="{Binding DeleteCommand}">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="1">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="Delete"/>
                </Button>
                <Button Background="Transparent" Margin="1" Command="{Binding DeleteAllCommand}">
                    <TextBlock Text="Delete All"/>
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="1">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
                
            </StackPanel>
        </ToolBar>
        
        <!-- Canvas-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="0" x:Name="canvas" Background="Beige" Width="960" Height="540" Top="0" Left="0">
                <Canvas.Effect>
                    <DropShadowEffect></DropShadowEffect>
                </Canvas.Effect>
                <Canvas.MouseLeftButtonDown>
                    Canvas_OnMouseLeftButtonDown
                </Canvas.MouseLeftButtonDown>
                <Canvas.MouseLeftButtonUp>
                    Canvas_OnMouseLeftButtonUp
                </Canvas.MouseLeftButtonUp>
                <Canvas.MouseMove>
                    Canvas_OnMouseMove
                </Canvas.MouseMove>
                <Image Source="{Binding ImageSource}"></Image>
            </Canvas>
        </Grid>
    </Grid>
</Window>
